{
  "name": "oauth2-server",
  "version": "2.0.0",
  "description": "OAuth2 server with microservices architecture",
  "main": "server.js",
  "scripts": {
    "start": "echo 'Use docker-compose up or start individual services' && echo 'OAuth: cd oauth-server && npm start' && echo 'API: cd api-server && npm start' && echo 'Client: npm run client'",
    "client": "node test-client.js",
    "legacy": "node server.js",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "axios": "^1.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "oauth2",
    "authorization",
    "server"
  ],
  "author": "",
  "license": "MIT"
}
